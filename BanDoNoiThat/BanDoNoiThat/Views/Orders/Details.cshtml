        <th>
            Products Name
        </th>
        <th>
            Products Image
        </th>
        <th>
            Quantity
        </th>
        <th>
            Price
        </th>

        <th></th>
    </tr>

    @foreach (var item in TakeOrderDetail)
    {
        <tr>
            <td>
                @item.Product.name
            </td>
            <td>
                <img src="~/Images/@item.Product.image" style="max-width : 300px"/>
            </td>

            <td>
                @item.amount
            </td>
            <td>
                @(item.total_price * item.amount)
            </td>

        </tr>
    }

</table>

